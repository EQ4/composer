- editor = this

.actions
  %button(click=@play) â–º
  %label
    Tempo
    %input(value=@tempo)
  %label
    Length
    %input(value=@beats)
  %button(click=@transpose) Transpose
  %button(click=@saveAs) Save
  %button(click=@loadSong) Load
  %button(click=@publish) Publish
  %button(click=@loadGistPrompt) Load Gist

.tools
  .instruments
    - each @samples, (sample, i) ->
      - activate = -> editor.activeToolIndex(0); editor.activeInstrument(i)
      .tool.instrument(style="background-image: url(#{sample.image.src})" click=activate)

  - eraser = -> editor.activeToolIndex(1)
  .tool.eraser(click=eraser)

.position